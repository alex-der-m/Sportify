                            <p class="card-text"><img class="small-icon" src="images/24.png" alt="Icono de Dia"> Día: ${activity.day}</p>
                            <p class="card-text"><img class="small-icon" src="images/clock.png" alt="Icono de Hora"> Hora: ${activity.time}</p>
                            <p class="card-text"><img class="small-icon" src="images/teacher.png" alt="Icono de Profesor"> Profesor: ${activity.teacher}</p>
                            <p class="card-text"><img class="small-icon" src="images/quota.png" alt="Icono de horario"> Cupo: ${activity.cupo}</p>
                            <div class="text-center mt-3">
                                <button class="btn btn-primary btn-inscribirse" data-id="${activity.id}">Inscribirse</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            container.append(card);
        });

        $(".btn-inscribirse").on("click", function() {
            const activityId = $(this).data("id");
            inscribirse(activityId);
        });
    }

