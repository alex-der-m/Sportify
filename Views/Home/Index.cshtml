    });

    function renderActivities(activities) {
        const container = $("#activityContainer");

        activities.forEach(activity => {
            const card = `
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg h-100">
                        <div class="card-body">
                            <h5 class="card-title">${activity.title}</h5>
